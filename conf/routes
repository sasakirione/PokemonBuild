# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# ユーザー周り
GET     /login/:userToken           controllers.UserController.findUser(userToken: String)


# 構築周り
# ポケモン名のサジェスト用API
GET     /pokemon/suggest/:input     controllers.PokemonController.getPokemonList(input: String)

# ポケモンの情報を取得
GET     /pokemon/:no                controllers.PokemonController.getPokemon(no: Int)